  <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
    <%= link_to "メタルマッチング", "/", id: "logo", class: "navbar-brand" %>
      <% if user_signed_in? %>
        <%= link_to "マイページ編集", edit_user_registration_path, class: "nav-link" %>
        <%= link_to "ユーザー一覧", users_path %>
        <div class="dropdown">
